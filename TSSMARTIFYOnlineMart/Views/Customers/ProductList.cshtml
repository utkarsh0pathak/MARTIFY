@model IEnumerable<TSSMARTIFYOnlineMart.Models.Product>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_AfterLoginLayout.cshtml";
}

<h2>Product List</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.Label("Available Stock")
            @*@Html.DisplayNameFor(model => model.ProductQTY)*@
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductQTY)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.ProductImage)*@
            <img src="@Url.Content(item.ProductImage)" alt="" height="40" width="40" />
        </td>
        <td>
            @Html.ActionLink("CART", "AddtoCart", new { id = item.ProductID })


           
        </td>
    </tr>
}

</table>
